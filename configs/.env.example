# Server Configuration
PORT=8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Database
POSTGRES_URL=postgres://postgres:password@localhost:5432/sms_gateway?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# NATS
NATS_URL=nats://localhost:4222

# Billing
PRICE_PER_PART_CENTS=5

# Rate Limiting (per client)
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Mock Provider Configuration
MOCK_SUCCESS_RATE=0.8
MOCK_TEMP_FAIL_RATE=0.15
MOCK_PERM_FAIL_RATE=0.05
MOCK_LATENCY_MS=100

# Retry Policy
RETRY_MIN_DELAY=15s
RETRY_MAX_DELAY=30m
RETRY_FACTOR=2.0
MAX_ATTEMPTS=10

# Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
LOG_LEVEL=info
